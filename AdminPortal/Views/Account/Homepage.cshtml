@{
    Layout = null;
    ViewData["Title"] = "Homepage";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Portal</title>
    <!-- Link to Bootstrap 5 CSS via CDN for styling the navbar -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header>
        <!-- Navbar structure based on the request: Homepage, Package (dropdown), Profile, About Us -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Homepage</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- 1. Package Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Package
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" href="/Package/InsertPackage">Insert</a></li>
                                <li><a class="dropdown-item" href="#">View Active/Approved</a></li>
                                <li><a class="dropdown-item" href="#">View Rejected/Pending</a></li>
                            </ul>
                        </li>
                        <!-- 2. Profile Button -->
                        <li class="nav-item">
                            <a class="nav-link" href="#">Profile</a>
                        </li>
                        <!-- 3. About Us Button -->
                        <li class="nav-item">
                            <a class="nav-link" href="#">About Us</a>
                        </li>
                    </ul>

                    <!-- Right-aligned Logout Button -->
                    <form class="d-flex">
                        <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Login">Log Out</a>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        <h1 class="display-4 text-center">Welcome to the Admin Dashboard</h1>
        <p class="text-center text-muted">Use the navigation bar above to manage packages and view profile settings.</p>
    </main>

    <!-- Link to Bootstrap 5 JS via CDN for dropdown functionality -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
